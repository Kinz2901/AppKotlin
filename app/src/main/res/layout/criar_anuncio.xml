<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context=".CriarAnuncio"
    tools:layout_editor_absoluteX="78dp"
    tools:layout_editor_absoluteY="296dp"
    android:background="#1C1C1C">

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="match_parent"
      android:layout_height="380dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/white" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/button"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:background="@drawable/arredondado"
      android:text="Adicionar Imagem"
      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="@+id/imageView8"
      app:layout_constraintEnd_toEndOf="@+id/imageView8"
      app:layout_constraintStart_toStartOf="@+id/imageView8"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageButton
      android:id="@+id/setaBack"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/arredondado"
      android:padding="10dp"
      android:scaleType="centerInside"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/seta_back" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="60dp"
      android:layout_marginTop="60dp"
      android:labelFor="@+id/campoNameProduct"
      android:text="Nome do produto:"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView8" />

  <EditText
      android:id="@+id/campoNameProduct"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginStart="60dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="60dp"
      android:background="#363636"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <TextView
      android:id="@+id/labelDescription"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="60dp"
      android:layout_marginTop="40dp"
      android:text="Descrição:"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/campoNameProduct" />

  <EditText
      android:id="@+id/editTextTextMultiLine2"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_marginStart="60dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="60dp"
      android:background="#363636"
      android:ems="10"
      android:gravity="start|top"
      android:inputType="textMultiLine"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/labelDescription" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="60dp"
      android:layout_marginTop="40dp"
      android:text="Preço:"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine2" />

  <EditText
      android:id="@+id/campoPrecoProduct"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:background="#363636"
      android:layout_marginStart="60dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="60dp"
      app:layout_constraintTop_toBottomOf="@+id/textView3"/>




</androidx.constraintlayout.widget.ConstraintLayout>