<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InspecionarProduto">

    <ImageView
        android:id="@+id/imageProduto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@drawable/padrao"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/precoProduto"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 299,00"
                android:textSize="30dp"
                android:textColor="#D9D9D9"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/categoriaProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:background="@drawable/borda_categoria"
                android:padding="10dp"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>



        <TextView
            android:id="@+id/nomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do produto"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:textColor="#D9D9D9"
            />

        <TextView
            android:id="@+id/labelDescricaoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes do produto:"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:textColor="#D9D9D9"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/descricaoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kjalkjdklajd jdwakljd kajdka jawkl j jdalkwj oidjioajd wajd akj dopa jdoa jdpoa jop kop jo jdo aodj waj kajsk lwdjp akjdoipja dsjkç walkdpça kd"
            android:textSize="16dp"
            android:layout_marginBottom="40dp"
            android:textColor="#D9D9D9"/>
        <TextView
            android:id="@+id/quantProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidades disponíveis: 20"
            android:textSize="18dp"
            android:textColor="#D9D9D9"
            android:layout_marginBottom="40dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Adicionar no carrinho"/>
    </LinearLayout>
</LinearLayout>